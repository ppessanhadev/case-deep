generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Branch {
  id              String           @id @default(uuid()) @db.Uuid()
  name            String
  description     String
  air_conditioner AirConditioner[]
  computer        Computer[]

  @@map("branch")
}

model AirConditioner {
  id          String @id @default(uuid()) @db.Uuid()
  branch      Branch @relation(fields: [branch_id], references: [id], onDelete: Cascade)
  branch_id   String @db.Uuid()
  description String
  quantity    Int
  btu         Float

  @@map("air_conditioner")
}

model Computer {
  id        String @id @default(uuid()) @db.Uuid()
  branch    Branch @relation(fields: [branch_id], references: [id], onDelete: Cascade)
  branch_id String @db.Uuid()
  quantity  Int
  brand     String

  @@map("computer")
}
